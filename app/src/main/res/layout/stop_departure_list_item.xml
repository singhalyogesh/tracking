<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="2dp" >


    <TextView
        android:id="@+id/departure_route_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="Departure Route Name"
        android:textSize="15dp"
        android:textColor="#ff000000"
        android:layout_marginLeft="10dp"
        android:gravity="center_vertical|center|center_horizontal"
        android:textStyle="italic" />

    <TextView
        android:id="@+id/route_direction_code"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/departure_route_name"
        android:layout_below="@+id/departure_route_name"
        android:text="Route Direction Code"
        android:textSize="12dp"
        android:textColor="#FF191919"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="5dp" />

    <TextView
        android:id="@+id/route_direction_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Route Direction Name"
        android:textSize="12dp"
        android:textColor="#191919"
        android:layout_below="@+id/route_direction_code"
        android:layout_alignLeft="@+id/route_direction_code"
        android:layout_alignStart="@+id/route_direction_code" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Departure Time"
        android:id="@+id/departure_time"
        android:textColor="#FF191919"
        android:layout_alignTop="@+id/route_direction_name"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="5dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Departure Route Code"
        android:id="@+id/departure_route_code"
        android:textColor="#FF191919"
        android:layout_below="@+id/departure_route_name"
        android:layout_alignRight="@+id/departure_time"
        android:layout_alignEnd="@+id/departure_time" />

</RelativeLayout>