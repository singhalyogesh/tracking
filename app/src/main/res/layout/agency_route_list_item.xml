<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="2dp" >


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Route Name"
        android:id="@+id/route_name"
        android:textSize="15dp"
        android:textStyle="bold|italic"
        android:textColor="#000000"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="5dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Route Code"
        android:id="@+id/route_code"
        android:textColor="#433a3a"
        android:layout_below="@+id/route_name"
        android:layout_alignRight="@+id/route_name"
        android:layout_alignEnd="@+id/route_name"
        android:layout_marginTop="5dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Route Direction Code"
        android:id="@+id/route_direction_code"
        android:textColor="#433a3a"
        android:layout_alignBottom="@+id/route_name"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="10dp"
        android:layout_marginRight="5dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Route Direction Name"
        android:id="@+id/route_direction_name"
        android:textColor="#433a3a"
        android:layout_below="@+id/route_direction_code"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="5dp"
        android:layout_marginRight="5dp" />

</RelativeLayout>